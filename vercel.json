{
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.7.2"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.php"
    },
    {
      "source": "/wat-is-werkplekbeheer",
      "destination": "/wat-is-werkplekbeheer.html"
    },
    {
      "source": "/voordelen-werkplekbeheer", 
      "destination": "/voordelen-werkplekbeheer.html"
    },
    {
      "source": "/werkwijze",
      "destination": "/werkwijze.html"
    },
    {
      "source": "/kosten-werkplekbeheer",
      "destination": "/kosten-werkplekbeheer.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ]
}